<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_margin="4dp"
    android:background="@drawable/border_round_8dp"
    android:orientation="vertical"
    android:padding="4dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp
"
        android:background="@drawable/circle_background"
        android:contentDescription="@string/water_station"
        android:padding="10dp"
        app:srcCompat="@drawable/water_station" />

    <TextView
        android:id="@+id/grid_station_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="16sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Station 1"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/grid_station_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:autoSizeMaxTextSize="14sp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="L'Aquila\n(Abruzzo - Italia)" />


</LinearLayout>