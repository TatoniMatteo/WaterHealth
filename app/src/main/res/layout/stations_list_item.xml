<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="25dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/border_stroke_round_16dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:contentDescription="@string/water_station"
        android:padding="10dp"
        app:srcCompat="@drawable/water_station"
        tools:ignore="ImageContrastCheck" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView
            android:id="@+id/list_station_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:autoSizeMaxTextSize="26sp"
            android:autoSizeTextType="uniform"
            android:gravity="start|center_vertical"
            android:text="Stazione 1"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/list_station_location"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeTextType="uniform"
            android:gravity="start|center_vertical"
            android:text="( L'Aquila, Italia )"
            android:textColor="@color/warm_gray"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>