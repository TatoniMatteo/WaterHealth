<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.WaterHealth" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colori personalizzati -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorSecondary">@color/gold</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorOnBackground">@color/black</item>
        <item name="colorAccent">@color/white</item>

        <!-- Altri attributi dello stile -->
        <item name="windowSplashScreenBackground">?android:colorBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/icon</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="android:fontFamily">@font/gilroy</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.WaterHealth" parent="Base.Theme.WaterHealth" />
</resources>
